<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/Ajax.js"></script>

    @RenderSection("scr", false)
</head>
<body style="background-color:aqua;">
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:aquamarine;">
        <div class="container">
            <div class="navbar-header" >
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>               
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" >
                    <li>@Html.ActionLink(RenderSection("user", false).ToString(), "", "")</li>
                    <li>@Html.ActionLink(RenderSection("admin", false).ToString(), "", "")</li>
                    <li style="font-size:20px;">@Html.ActionLink("Product Management", "", "")</li>
                    <li>@Html.ActionLink("Login", "Login", "Product")</li>
                    <li>@Html.ActionLink("Signup", "Signup", "Product")</li>
                    
                </ul>
                
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderSection("image", false)
        @RenderBody()

        <hr />
       
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
